<%- layout('boilerplate') %>

<div class="row">
    <h1 class="text-center">Edit Pet's Listing</h1>
    <div class="col-6 offset-3">

        <form action="/pets/<%=pet._id%>?_method=PUT" method="POST">
            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" id="name" name="pet[name]" value="<%=pet.name%>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" aria-describedby="price-label" name="pet[price]"
                        value="<%=pet.price%>">
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>



